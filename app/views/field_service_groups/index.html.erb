<section class="grid grid-cols-3 gap-8">
  <h1 class="col-span-full mt-3 text-3xl font-semibold">Field Service Groups</h1>

  <% @groups.each do |group| %>
    <section class="flex flex-col justify-between p-4 bg-white rounded-lg text-slate-950">
      <h2 class="mb-4 text-lg font-medium text-jw-bunting">Group <%= group.number %></h2>
      <%= link_to "Publishers", field_service_group_publishers_path(group.id), class: "p-2.5 bg-jw-bunting rounded-md font-medium text-sm text-slate-50 text-center" %>
    </section>
  <% end %>
</section>