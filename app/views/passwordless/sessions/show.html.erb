<section class="grid place-items-center h-full">
  <%= render "shared/flash" %>

  <%= form_with(model: @session, url: url_for(action: "update"), scope: "passwordless", method: "patch", data: { turbo: false }, class: "flex flex-col w-60") do |f| %>
    <h2 class="font-inter text-xl font-bold leading-6 text-jw-white text-center"><%= t(".title") %></h2>

    <div class="flex flex-col mt-8">
      <%= f.label :token, t(".token"), class: "font-inter font-medium text-md leading-6 text-jw-white" %>
      <%= f.text_field :token, required: true, autofocus: true, autocomplete: "one-time-code", class: "mt-2 px-3 py-2 rounded-lg border-none ring-2 ring-inset ring-jw-bokara-gray bg-jw-onyx font-inter font-medium text-md leading-6 text-jw-white placeholder:text-jw-quick-silver hover:ring-jw-san-marino focus:ring-2 focus:ring-inset focus:ring-jw-san-marino" %>
    </div>

    <%= f.submit t(".confirm"), class: "mt-4 p-2 rounded-lg ring-2 ring-inset ring-jw-san-marino bg-jw-bunting font-inter font-medium text-md leading-6 text-jw-white text-center cursor-pointer" %>
  <% end %>
</section>
