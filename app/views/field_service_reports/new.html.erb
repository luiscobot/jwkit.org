<section class="grid grid-cols-4 gap-8">
  <h1 class="col-span-full text-3xl font-semibold">Field Service Report</h1>

  <%= form_with model: @field_service_report, class: "col-span-2" do |form| %>
    <h2 class="flex justify-between items-center gap-2 text-xl font-medium">
      <%= @publisher.name %>
      <% if @publisher.privilege_of_service %>
        <span class="inline-flex items-center rounded-md bg-jw-bunting/50 px-2 py-1 text-xs font-medium capitalize text-jw-white ring-1 ring-inset ring-jw-bunting"><%= @publisher.privilege_of_service %></span>
      <% end %>
    </h2>

    <div data-controller="toggle" class="mt-6 grid grid-cols-2 gap-6 p-6 bg-jw-seashell rounded-xl">
      <div class="flex flex-col gap-2 col-span-1">
        <%= form.label :month, class: label_style %>
        <%= form.select :month, month_options, {}, class: control_style %>
      </div>

      <div class="flex flex-col gap-2 col-span-1">
        <%= form.label :year, class: label_style %>
        <%= form.select :year, year_options, {}, class: control_style %>
      </div>

      <div class="flex items-center gap-2 col-span-full">
        <%= form.check_box :shared_in_ministry, data: { action: "change->toggle#toggle" }, class: "h-4 w-4 rounded border-jw-san-marino/25 text-jw-san-marino focus:ring-jw-san-marino" %>
        <%= form.label :shared_in_ministry, class: label_style %>
      </div>

      <div class="flex flex-col gap-2 col-span-1">
        <%= form.label :bible_studies, class: label_style %>
        <%= form.text_field :bible_studies, data: { toggle_target: "control" }, disabled: true, class: control_style %>
      </div>

      <% if @publisher.privilege_of_service %>
        <div class="flex flex-col gap-2 col-span-1">
          <%= form.label :hours, class: label_style %>
          <%= form.text_field :hours, data: { toggle_target: "control" }, disabled: true, class: control_style %>
        </div>
      <% end %>

      <div class="flex flex-col gap-2 col-span-full">
        <%= form.label :comments, class: label_style %>
        <%= form.text_area :comments, class: "#{control_style} resize-none" %>
      </div>
    </div>

    <%= form.hidden_field :publisher_id, value: @publisher.id %>

    <%= form.submit class: "mt-6 p-2.5 bg-jw-san-marino rounded-md font-medium text-sm capitalize text-center cursor-pointer" %>
  <% end %>
</section>