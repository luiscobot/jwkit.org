<section class="flex flex-col gap-8 h-full">
  <div>
    <h1 class="font-latina-essential font-bold text-xl leading-6 text-jw-white"><%= t("publishers.title.plural") %></h1>
    <p class="mt-2 font-latina-essential font-medium text-base text-jw-quick-silver"><%= t("field_service_groups.title.variant.singular") %> <%= @field_service_group.number %></p>
  </div>

  <div class="flex flex-col gap-6">
    <div class="flex justify-end">
      <p class="w-fit px-3 py-2 rounded-lg ring-2 ring-inset ring-jw-onyx font-latina-essential font-medium text-base text-jw-white"><%= last_month_date %></p>
    </div>

    <section class="">
      <div class="grid grid-cols-3 px-6 py-4 bg-jw-bunting rounded-t-lg ring-2 ring-inset ring-jw-san-marino">
        <p class="font-latina-essential font-medium text-base text-jw-white"><%= t("publishers.title.singular") %></p>
        <p class="font-latina-essential font-medium text-base text-jw-white text-center"><%= t("publishers.privilege_of_service.title") %></p>
        <p class="font-latina-essential font-medium text-base text-jw-white text-right"><%= t("field_service_reports.title.variant.singular") %></p>
      </div>

      <ul class="divide-y-2 divide-jw-seashell">
        <%= render @publishers %>
      </ul>
    </section>
  </div>
</section>
