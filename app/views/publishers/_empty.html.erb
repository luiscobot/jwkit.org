    <h3 class="text-lg font-semibold mt-2 text-center"><%= t("publishers.empty.title") %></h3>
    <p class="text-base mt-1 text-center"><%= t("publishers.empty.description") %></p>
    <%= link_to field_service_group_reports_path(@field_service_group.id), class: "flex items-center gap-1.5 mt-6 px-5 py-2.5 bg-jw-san-marino rounded-md font-medium text-sm text-center" do %>
